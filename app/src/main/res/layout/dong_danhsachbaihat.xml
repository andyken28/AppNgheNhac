<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:id="@+id/textviewdanhsachindex"

        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textviewtenbaihatdanhsach"
        android:layout_toRightOf="@id/textviewdanhsachindex"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:maxLines="1"
        android:text="Tên bài hát"
        android:textColor="#030303"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/textviewdanhsachindex"
        android:layout_below="@id/textviewtenbaihatdanhsach"
        android:id="@+id/textviewcasidanhsach"
        android:textSize="20sp"
        android:maxLines="1"
        android:textColor="#979797"
        android:text="ca sĩ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:layout_marginRight="5dp"
        android:src="@drawable/iconlove"
        android:id="@+id/imageluotthichdanhsach"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp">

    </ImageView>
</RelativeLayout>
</androidx.cardview.widget.CardView>