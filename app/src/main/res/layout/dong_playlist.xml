<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:id="@+id/imgbackgroudplaylist"
        android:scaleType="fitXY"
            android:layout_width="match_parent"
        android:layout_height="110dp"/>
    <View
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/custom_backgroundquancao"/>
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imgiconplaylist"
        android:layout_alignBottom="@id/imgbackgroudplaylist"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:textSize="13sp"
        android:text="TOP 100 bài hát hay nhât 2021"
        android:layout_alignBottom="@id/imgiconplaylist"
        android:layout_toRightOf="@id/imgiconplaylist"
        android:layout_marginLeft="13dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:id="@+id/textviewtenplaylist"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>